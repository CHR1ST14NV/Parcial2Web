<%- include("partials/head", {
  title: "DesaWeb | Registro",
  url: "www.DesaWeb.com",
  heading: "Formulario de Registro"
}) %>
<form action="/registro" method="POST" novalidate>
  <fieldset>
    <legend>Datos Generales</legend>
    <div class="data-panel-hint">Panel para<br>Datos Generales</div>
    <div class="form-grid">
      <label>
        Nombre
        <input type="text" name="nombre" placeholder="text" required value="<%= values.nombre %>">
        <% if (errors.nombre) { %>
          <span class="error"><%= errors.nombre %></span>
        <% } %>
      </label>
      <label>
        Apellido
        <input type="text" name="apellido" placeholder="text" required value="<%= values.apellido %>">
        <% if (errors.apellido) { %>
          <span class="error"><%= errors.apellido %></span>
        <% } %>
      </label>
      <label>
        DPI
        <input type="text" name="dpi" placeholder="text" value="<%= values.dpi %>" pattern="[0-9]{4}[- ]?[0-9]{5}[- ]?[0-9]{4}">
        <% if (errors.dpi) { %>
          <span class="error"><%= errors.dpi %></span>
        <% } %>
      </label>
      <label>
        Fecha de Nacimiento
        <input type="date" name="nacimiento" required value="<%= values.nacimiento %>">
        <% if (errors.nacimiento) { %>
          <span class="error"><%= errors.nacimiento %></span>
        <% } %>
      </label>
      <label>
        Sexo
        <select name="sexo" required>
          <option value="M" <%= values.sexo === "M" ? "selected" : "" %>>M</option>
          <option value="F" <%= values.sexo === "F" ? "selected" : "" %>>F</option>
          <option value="O" <%= values.sexo === "O" ? "selected" : "" %>>Otro</option>
        </select>
        <% if (errors.sexo) { %>
          <span class="error"><%= errors.sexo %></span>
        <% } %>
      </label>
    </div>
  </fieldset>
  <div class="credentials">
    <label>
      Usuario
      <input type="text" name="usuario" placeholder="usuario" required value="<%= values.usuario %>">
      <% if (errors.usuario) { %>
        <span class="error"><%= errors.usuario %></span>
      <% } %>
    </label>
    <label>
      Contraseña
      <input type="password" name="contrasena" placeholder="Contraseña" required>
      <% if (errors.contrasena) { %>
        <span class="error"><%= errors.contrasena %></span>
      <% } %>
    </label>
  </div>
  <button type="submit">Guardar</button>
</form>
<%- include("partials/footer") %>

